<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Biblioteca</title>

    <link rel="stylesheet" href="~/Content/site.css" />
</head>
<body>
    <header class="topbar">
        <div class="contenedor topbar-contenido">
            <a class="logo" href="@Url.Action("Index","Home")">📚 Biblioteca</a>
            <nav class="nav">
                <a href="@Url.Action("Index","Home")">Buscar</a>
                <a href="@Url.Action("Index","Reportes")">Reportes</a>
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    @RenderSection("scripts", required: false)
</body>
</html>
